<Window x:Class="GUCLauncher.InfoBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUCLauncher"
        mc:Ignorable="d"
        Title="InfoBox" Height="250" Width="350" AllowsTransparency="True" WindowStyle="None" KeyDown="Window_KeyDown">
    <Window.Background>
        <ImageBrush ImageSource="Resources/empty_menu_back.png"/>
    </Window.Background>
    <Grid>
        <Image Source="Resources/empty_menu_border.png" Stretch="Fill"/>
        <TextBlock Name="tbText" Margin="15,15,15,110" FontSize="25" Foreground="#FFE07D06" FontFamily="Resources/#G2Font" TextWrapping="Wrap" TextAlignment="Center"/>
        <Button Content="Akzeptieren" Style="{StaticResource MainButton}" Margin="36,176,36.4,27.6" Click="Click_Accept"/>
    </Grid>
</Window>
